

<p>
  <strong>title</strong>:
  <%= @post.title %>
</p>

<p>
  <strong>description</strong>
  <%= @post.description %>
</p>

<% if @post.image.present? %>
  <%= cl_image_tag @post.image, alt: @post.title, class: "user_image" %>

  

<% end %>
<% @post.comments.each do |c| %>
<%= c.content %>
<% end %>
<%= link_to "Delete", post_path(@post), method: "delete" %>
<%= render partial: "comments/form" %>