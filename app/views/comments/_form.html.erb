 
 <%= form_with model: @comment, local: true do |f| %>

 
      
       
 
 <div class="commentform">
   <strong>
    <h2>Add a Comment</h2>
       <%= f.label :content, "Comment text" %><br>

  <%= f.text_area :content %>
